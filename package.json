{
  "name": "vues",
  "version": "0.5.0",
  "description": "The quickest way to run vuejs client side (inspired by next.js and nuxt.js).",
  "main": "./index.js",
  "bin": {
    "vues": "./bin/vue",
    "vues-dev": "./bin/vues-dev"
  },
  "repository": "https://github.com/cj/vues",
  "author": "cj <cjlazell@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "run-s lint && jest --coverage --forceExit --no-cache",
    "lint": "eslint lib bin index.js",
    "test:watch": "jest --watchAll --coverage"
  },
  "babel": {
    "presets": [
      "vue-app",
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      "add-module-exports"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./lib/__setup__/tests.js",
    "collectCoverageFrom": [
      "lib/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 50,
        "lines": 33,
        "statements": 25
      }
    }
  },
  "dependencies": {
    "autoprefixer": "^6.7.4",
    "babel-loader": "^6.3.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-preset-vue-app": "^0.4.0",
    "babel-register": "^6.23.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.1",
    "commander": "^2.9.0",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.1",
    "event-source-polyfill": "^0.0.9",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "fs-extra": "^2.0.0",
    "glob": "^7.1.1",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "loader-utils": "1.0.2",
    "lodash": "^4.17.4",
    "micro": "^7.0.6",
    "ora": "^1.1.0",
    "post-compile-webpack-plugin": "^0.1.1",
    "postcss-loader": "^1.3.1",
    "promise-polyfill": "^6.0.2",
    "query-string": "^4.3.2",
    "style-loader": "^0.13.1",
    "vue": "^2.1.10",
    "vue-loader": "^11.1.0",
    "vue-meta": "^0.5.3",
    "vue-router": "^2.2.1",
    "vue-template-compiler": "^2.1.10",
    "vuex": "^2.1.2",
    "webpack": "2.2.1",
    "webpack-dev-middleware": "1.10.1",
    "webpack-hot-middleware": "2.17.0",
    "webpack-merge": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-standard": "^2.0.1",
    "jest": "^19.0.0",
    "npm-run-all": "^4.0.1",
    "request-promise": "^4.1.1",
    "test-listen": "^1.0.1"
  }
}
