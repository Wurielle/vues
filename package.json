{
  "name": "vues",
  "version": "0.5.0",
  "description": "The quickest way to run vuejs client side (inspired by next.js and nuxt.js).",
  "main": "./index.js",
  "bin": {
    "vues": "./bin/vue",
    "vues-dev": "./bin/vues-dev"
  },
  "repository": "https://github.com/cj/vues",
  "author": "cj <cjlazell@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "run-s lint && jest --coverage --forceExit",
    "lint": "eslint lib bin index.js",
    "test:watch": "jest --watchAll --coverage"
  },
  "babel": {
    "presets": [
      "vue-app",
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      "add-module-exports"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./lib/__setup__/tests.js",
    "collectCoverageFrom": [
      "lib/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 50,
        "lines": 33,
        "statements": 25
      }
    }
  },
  "dependencies": {
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-preset-vue-app": "^0.4.0",
    "babel-register": "^6.23.0",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "glob": "^7.1.1",
    "html-webpack-plugin": "^2.28.0",
    "lodash": "^4.17.4",
    "micro": "^7.0.6",
    "webpack": "2.2.1",
    "webpack-dev-middleware": "1.10.1",
    "webpack-hot-middleware": "2.17.0",
    "webpack-merge": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-jest": "^1.0.2",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-standard": "^2.0.1",
    "fs-extra": "^2.0.0",
    "jest": "^18.1.0",
    "npm-run-all": "^4.0.1",
    "request-promise": "^4.1.1",
    "test-listen": "^1.0.1"
  }
}
